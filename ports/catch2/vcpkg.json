{
  "name": "catch2",
  "version-semver": "3.10.0",
  "description": "A modern, C++-native, test framework for unit-tests, TDD and BDD.",
  "homepage": "https://github.com/catchorg/Catch2",
  "license": "BSL-1.0",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
